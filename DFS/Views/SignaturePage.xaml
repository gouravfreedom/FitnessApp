<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DFS.Views.SignaturePage"
             xmlns:signatures="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms">
    <ContentPage.Content>
       <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

            
        <!--<signatures:SignaturePadView 
            x:Name="signaturePad"
            BackgroundImage="truck_copy.png"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand"
            Grid.Row="0" />-->

            <StackLayout x:Name="signaturePad"
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"
                Grid.Row="0">
                
            </StackLayout>
            

        <Button
            HorizontalOptions="FillAndExpand"
            Text="Show Image"
            Clicked="OnShowImage"
            Grid.Row="1" />
        <Image x:Name="displayImage"
                Grid.Row="2"/>

    </Grid>
    </ContentPage.Content>
</ContentPage>
