<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DFS.Views.DatabasePage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Add Item" Clicked="AddItem"></Button>
            <Entry x:Name="DataEntry" Margin="20,0" />
            <Button Text="Show List" Clicked="ShowList"></Button>
            <ListView x:Name="listView">
               <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <ViewCell.ContextActions>
                                <MenuItem Clicked="More_Clicked" CommandParameter="{Binding .}" Icon="about.png" />
                                <MenuItem Clicked="Delete_Clicked" CommandParameter="{Binding .}" Text="Delete"  />
                             </ViewCell.ContextActions>
                            
                            <Label Margin="20,0" Text="{Binding .}" VerticalTextAlignment="Center" TextColor="Black" FontSize="Medium" />

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
